{% extends "layout.html.twig" %}

{% block content %}
<div id="test-app">
    <header class="blog-header">
        <h1>My spectacular blog</h1>
        <h2>A totally true statement</h2>
    </header>

    <div class="blog-add-post">
        <div class="errors">
            <ul>
                {#container for errors#}
            </ul>
        </div>

        {% include 'addPost.html.twig' with {'addPostUrl': addPostUrl} %}
    </div>

    {% include 'usedWords.html.twig' with {'mostUsedWords': mostUsedWords} %}

    <div class="blog-posts">
        {% for post in posts %}
            {% include 'post.html.twig' with {'post': post} %}
        {% endfor %}
    </div>
</div>
{% endblock %}
